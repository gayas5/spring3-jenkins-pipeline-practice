pipeline {
    agent any

    parameters {
        string(
            name: 'GIT_BRANCH',
            defaultValue: 'main',
            description: 'Git branch to build'
        )

        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'qa', 'prod'],
            description: 'Select deployment environment'
        )

        booleanParam(
            name: 'SKIP_TESTS',
            defaultValue: false,
            description: 'Skip unit tests'
        )
    }

    tools {
        maven 'M3'   // Make sure M3 is configured in Jenkins Global Tool Config
        jdk 'JDK17'  // Make sure JDK17 is configured
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Checking out branch: ${params.GIT_BRANCH}"
                git branch: params.GIT_BRANCH,
                    url: 'https://github.com/gayas5/spring3-jenkins-pipeline-practice.git'
            }
        }

        stage('Build') {
            steps {
                echo "Environment: ${params.ENVIRONMENT}"
                echo "Skip tests: ${params.SKIP_TESTS}"

                script {
                    if (params.SKIP_TESTS) {
                        sh 'mvn clean package -DskipTests'
                    } else {
                        sh 'mvn clean package'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "GAYAS Build SUCCESS for ${params.ENVIRONMENT}"

            // Auto-archive artifacts for evidence
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
        failure {
            echo "Build FAILED"

            // Optionally, archive whatever was generated even if failed
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
        always {
            // Optional: keep console logs or other files if needed
            echo "Build completed at ${new Date()}"
        }
    }
}
